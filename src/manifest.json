{
  "name": "Roll20 Loot Tables",
  "version": "1.0",
  "description": "Extension to enrich loot system to GMs",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]
}
